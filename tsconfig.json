{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "node_modules/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  }
}